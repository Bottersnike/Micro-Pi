aS'/*\n * Compass.mpi\n * \n * Copyright 2016 Nathan Taylor <bottersnike237@gmail.com>\n * \n * This program is free software; you can redistribute it and/or modify\n * it under the terms of the GNU General Public License as published by\n * the Free Software Foundation; either version 2 of the License, or\n * (at your option) any later version.\n * \n * This program is distributed in the hope that it will be useful,\n * but WITHOUT ANY WARRANTY; without even the implied warranty of\n * MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the\n * GNU General Public License for more details.\n * \n * You should have received a copy of the GNU General Public License\n * along with this program; if not, write to the Free Software\n * Foundation, Inc., 51 Franklin Street, Fifth Floor, Boston,\n * MA 02110-1301, USA.\n * \n * This program will allow you to turn your BBC Micro:Bit into a compass. After\n * calibration, the line on the display will always point north. The code works\n * by having a lot of images defined in "header.h" and then it selects between\n * them using the bearing of the compass.\n */\n#include "MicroBit.h"\n#include "images.h"\n\nint last = -1;\nint value = 0;\n\nvoid app_main()\n{\n    while (1)\n    {\n        value = uBit.compass.heading() / 15;\n        uBit.display.stopAnimation();\n\n        if (last != value) {\n            last = value;\n            uBit.display.clear();\n        }\n        \n        if (last == 0) {\n            uBit.display.print(N,0,0,0);\n        } else if (last == 1) {\n            uBit.display.print(NNNW,0,0,400);\n        } else if (last == 2) {\n            uBit.display.print(NNW,0,0,400);\n        } else if (last == 3) {\n            uBit.display.print(NW,0,0,400);\n        } else if (last == 4) {\n            uBit.display.print(NWW,0,0,400);\n        } else if (last == 5) {\n            uBit.display.print(NWWW,0,0,400);\n        } else if (last == 6) {\n            uBit.display.print(W,0,0,400);\n        } else if (last == 7) {\n            uBit.display.print(SWWW,0,0,400);\n        } else if (last == 8) {\n            uBit.display.print(SWW,0,0,0);\n        } else if (last == 9) {\n            uBit.display.print(SW,0,0,400);\n        } else if (last == 10) {\n            uBit.display.print(SSW,0,0,400);\n        } else if (last == 11) {\n            uBit.display.print(SSSW,0,0,400);\n        } else if (last == 12) {\n            uBit.display.print(S,0,0,400);\n        } else if (last == 13) {\n            uBit.display.print(SSSE,0,0,400);\n        } else if (last == 14) {\n            uBit.display.print(SSE,0,0,400);\n        } else if (last == 15) {\n            uBit.display.print(SE,0,0,400);\n        } else if (last == 16) {\n            uBit.display.print(SEE,0,0,0);\n        } else if (last == 17) {\n            uBit.display.print(SEEE,0,0,400);\n        } else if (last == 18) {\n            uBit.display.print(E,0,0,400);\n        } else if (last == 19) {\n            uBit.display.print(NEEE,0,0,400);\n        } else if (last == 20) {\n            uBit.display.print(NEE,0,0,400);\n        } else if (last == 21) {\n            uBit.display.print(NE,0,0,400);\n        } else if (last == 22) {\n            uBit.display.print(NNE,0,0,400);\n        } else if (last == 23) {\n            uBit.display.print(NNNE,0,0,400);\n        }\n        \n        uBit.sleep(100);\n    }\n}\n'
